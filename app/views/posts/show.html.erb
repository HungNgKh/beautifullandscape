<div class="posts-wrapper row">
  <div class="post">
    <%= render 'post', post: @post %>
    <div class="text-center">
      <% if @post.user.id == current_user.id %>
        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Back', posts_path %>
      <% else %>
        <%= link_to 'Back', posts_path %>
      <% end %>
    </div>
  </div>
</div>


