<div class="posts-wrapper">
  <div class="post">
    <div class="post-body">
      <div class="image-wrap">
        <%= form_image_select(@post) %>
        <%= simple_form_for @post, html: { multipart: true } do |f| %>
            <div class="row">
              <div class="col-md-12 text-center">
                <%= f.error_notification %>
              </div>
            </div>
            <div class="container-fluid">
              <div class="form-group text-center">
                <h4 class="col-md-4">Upload an image:</h4>
                <%= f.input :image, label: false, input_html: { onChange: 'loadFile(event)', class: 'col-md-8' } %>
              </div>
              <div class="form-group text-center">
                <%= f.input :caption, label: false, placeholder: 'Add your caption', input_html: { class: 'input-caption'} %>
              </div>
              <div class="form-group text-center">
                <%= f.button :submit, class: 'btn-success btn-block' %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
